# =============================================================================
# ðŸ¦† Quack as a Service - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
DATABASE_URL=postgresql://quack:quack@localhost:5432/quack

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# Server host and port (usually don't need to change these)
# HOST=0.0.0.0
# PORT=8000
# RELOAD=True

# Enable debug mode for development (shows SQL queries, etc.)
# FLASK_DEBUG=false

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================
# Object detection model settings
MODEL_ID=IDEA-Research/grounding-dino-base
DETECTION_THRESHOLD=0.32
TEXT_QUERIES=a mask. a glove. a hairnet.

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local storage directories
UPLOAD_FOLDER=uploads
DETECTION_OUTPUT_FOLDER=detected_frames

# =============================================================================
# AWS S3 CONFIGURATION (Required for image storage)
# =============================================================================
# Get these from your AWS Console -> IAM -> Users -> Security credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# S3 bucket for storing processed images with detection boxes
S3_BUCKET_NAME=your-s3-bucket-name

# AWS region (e.g., us-east-1, us-west-2, eu-west-1)
AWS_REGION=us-east-1

# =============================================================================
# SECURITY & CORS CONFIGURATION
# =============================================================================
# CORS origins (set to your frontend URL in production)
# CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'production' when deploying
# ENVIRONMENT=development

# API rate limiting (requests per minute)
# RATE_LIMIT=100

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Enable/disable ML features (set to 'false' to disable AI detection)
# ML_ENABLED=true

# Maximum image upload size (in MB)
# MAX_IMAGE_SIZE=10


# Example production database URL:
# DATABASE_URL=postgresql://prod_user:secure_password@db-server:5432/quack_prod

# Example production S3 bucket:
# S3_BUCKET_NAME=quack-prod-images-bucket
